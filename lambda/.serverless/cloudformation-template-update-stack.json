              ]
            },
            {
              "Effect": "Allow",
              "Action": [
                "sns:Subscribe"
              ],
              "Resource": "*"
            },
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:GetItem"
              ],
              "Resource": "*"
