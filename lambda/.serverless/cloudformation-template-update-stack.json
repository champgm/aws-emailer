      "DependsOn": [
        "IamPolicyLambdaExecution",
        "IamRoleLambdaExecution"
      ]
    },
    "EmailerLambdaVersionmsU7sBFvsR6lig6S20oU7RhsJoIyCVBF0beMImaJid8": {
