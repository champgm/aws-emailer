        "CodeSha256": "msU7sBFvsR6lig6S20oU7RhsJoIyCVBF0beMImaJid8="
      }
    },
    "SNSTopicEmailerentrypoint": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "TopicName": "emailer_entrypoint",
        "DisplayName": "",
