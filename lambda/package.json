{
  "name": "emailer",
  "version": "1.0.0",
  "description": "The lambda backend for a self-emailer",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf transpile-nodejs",
    "transpile": "babel ./src -d ./transpile-nodejs",
    "nyc": "nyc",
    "jasmine": "jasmine",
    "lint": "eslint ./src ./spec --ext .js --fix",
    "lint-and-jasmine": "npm run lint && npm run jasmine",
    "test": "npm run nyc npm run lint-and-jasmine",
    "install": "npm run test && npm run transpile",
    "deploy": "npm run install && serverless deploy",
    "update": "npm run install && npm run deployfunction",
    "deployfunction": "serverless deploy function -f emailer",
    "doitlive": "npm run clean && npm run lint && npm run transpile && npm run deployfunction"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/champgm/aws-emailer/tree/master/lambda"
  },
  "keywords": [
    "email"
  ],
  "author": "macandna",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.7.19",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-regenerator": "^6.21.0",
    "babel-polyfill": "^6.20.0",
    "babel-register": "^6.18.0",
    "bluebird": "^3.4.7",
    "jasmine-co": "^1.2.2",
    "mysql": "^2.12.0",
    "nodemailer": "^2.7.0",
    "nodemailer-smtp-transport": "^2.7.2",
    "promise-mysql": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-istanbul": "^3.0.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jasmine": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "nyc": "^10.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "istanbul",
      "syntax-async-functions",
      "transform-regenerator"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**"
    ],
    "exclude": [
      "transpile-nodejs/**",
      "spec/**",
      "node_modules/**"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "private": true
}